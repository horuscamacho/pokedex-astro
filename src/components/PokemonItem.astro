---
export interface Props {
    id: string;
    name: string;
    img: string;
    description: string;
}
const {id, img, name, description } = Astro.props
---

<a class="hover:scale-105 inline-block transition-all hover:contrast-125 hover:drop-shadow-2xl " href={id} >
    <img
            class="aspect-[389/500] h-64 object-cover w-64  "
            src={img}
            alt={name}
    />
</a>